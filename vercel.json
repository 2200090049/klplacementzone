{
  "version": 2,
  "builds": [
     {
       "src": "client/",
       "use": "@vercel/static-build",
       "config": {
         "distDir": "build"
       }
     },
     {
       "src": "server/",
       "use": "@vercel/node"
     }
  ],
  "routes": [
     {
       "src": "/api/(.*)",
       "dest": "server/index.js"
     },
     {
       "src": "/(.*)",
       "dest": "client/$1"
     }
  ],
  "rewrites": [
     {
       "source": "/(.*)",
       "destination": "/$1"
     }
  ]
 }
 